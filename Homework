#include <graphics.h>
#include<iostream>
#include<conio.h>
#include<math.h>
using namespace std;
int a[480][640],m,xa,ya,xb,yb;
//m=(yb-ya)/(xb-xa);

int input(int &x,int &y){
    while(1){
cout<<"Nhap vao toa do x:";
cin>>x;
cout<<"nhap vao toa do y:";
cin>>y;
if(x<360 && y<480) break;
else cout<<"erro data,retype";
}
}
void th1(){
   
   //  if(abs(m)<=1){
                   if(xa>xb){
                             int xc=0;
                             xc=xa;xa=xb;xb=xc;
                             }
                            initwindow(360,480,"Homework"); 
                     int x=xa,y=ya;
                     while(x<=xb){
                     putpixel(x,y,GREEN);  
                    // circle(x,y,2);
                     x=x+1;
                       double a=m*(x-xa)+ya;
                     y=round(a);
                                         }
                   }
    // }
 void th2(){
    // if(abs(m)>1){
                   if(ya>yb){
                             int xc=0;
                             xc=ya;ya=yb;yb=xc;
                             }
                             initwindow(360,480,"homework");
                     int x=xa,y=ya;
                     while(y<=yb){
                     putpixel(x,y,GREEN); 
                    // circle(x,y,2); 
                     double a=(1/m)*(y-ya)+xa;
                    x=round(a);
                    y=y+1;
                                         }
                   }
    // }
  
void paint(int xa,int ya,int xb,int yb){
     m=(yb-ya)/(xb-xa);
     if(abs(m)<=1) th1();
     else th2();
     
     }
int main( )
{
   cout<<"nhap vao toa do diem A:"<<endl;input(xa,ya);
  cout<<"nhap vao toa do diem B:xB="<<endl;input(xb,yb);
  paint(xa,ya,xb,yb);
    
  getch();
closegraph();

}
